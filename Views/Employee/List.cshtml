@model PagedList<com.example.mvc.Models.EmployeeModel>
    @using Webdiyer.WebControls.Mvc;
    <div>
        @using (Html.BeginForm("List", "Employee", FormMethod.Get))
{
    <div class="form-group">
        <label>姓名：</label>
        @Html.TextBox("FindName", (string)ViewBag.FindName)
        <input type="submit" class="btn btn-success btn-sm" value="查询" />
    </div>
}
    </div>
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td align="center">@Html.DisplayNameFor(m => m.Name)</td>
                    <td align="center">@Html.DisplayNameFor(m => m.Age)</td>
                    <td align="center">操作</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="center">@item.Name</td>
                        <td align="center">@item.Age</td>
                        <td align="center">
                            <a href="/Employee/Edit/@item.Id" class="btn btn-success">编辑</a>
                            <a href="/Employee/Detail/@item.Id" class="btn btn-success">详细</a>
                            <a href="/Employee/Remove/@item.Id" class="btn btn-success">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <center>
            <a href="/Employee/Edit/0" class="btn btn-primary">新增</a>
        </center>
    </div>
    <br/>
    <div>
        <center class="text-info">
            @Html.Pager(Model, new PagerOptions
{
    PageIndexParameterName = "pageIndex",
    AutoHide = false,
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "尾页"
})
        </center>
    </div>


